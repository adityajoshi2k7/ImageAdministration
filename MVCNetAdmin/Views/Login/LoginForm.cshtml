
@{
    ViewData["Title"] = "LoginForm";
}

<div class="row">
    <div class="form-group  col-md-4 col-md-offset-4 ">
        <form asp-action="Authenticate" id="myform">
            <div class="panel panel-default">
                <div class="panel-heading font-weight-bold" style="text-align:center;"><strong>Login</strong></div>
                <div class="panel-body" style="width: 75%;margin-left: 10%;">
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <strong><label class="font-weight-bold required ">User Name*</label></strong>
                            <input name="username" id="username" type="text" class="form-control" />

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <strong><label class="font-weight-bold required ">Password*</label></strong>
                            <input name="password" id="password" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <br />
                        <div class="col-md-4 col-md-offset-4">
                            <input type="submit" value="Login" class="btn btn-primary" style="width:100%" />
                        </div>
                    </div>
                </div>
            </div>
            @if (TempData["ReturnUrl"] != null && TempData["ReturnUrl"].ToString() != "")
            {
                <input type="hidden" name="returnurl" value="@TempData["ReturnUrl"]" />
            }
        </form>
    </div>
</div>
@if (TempData["loginfailed"] != null && TempData["loginfailed"].ToString() != "")
{
    <div class="alert alert-danger" id="success-alert" style="text-align:center;position: fixed;top:0;left:0;width:100%;z-index:9999; margin:0 auto;">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <strong style="white-space:pre-wrap">@TempData["loginfailed"].ToString()</strong>

    </div>
    <script>
        $(document).ready(function () {

            $("#success-alert").fadeTo(5000, 500).slideUp(500, function () {
                $("#success-alert").slideUp(500);
            });
        });


    </script>



}

@if (TempData["logout"] != null && TempData["logout"].ToString() != "")
{
    <div class="alert alert-success" id="success-alert" style="text-align:center;position: fixed;top:0;left:0;width:100%;z-index:9999; margin:0 auto;">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <strong style="white-space:pre-wrap">@TempData["logout"].ToString()</strong>

    </div>
    <script>
        $(document).ready(function () {

            $("#success-alert").fadeTo(5000, 500).slideUp(500, function () {
                $("#success-alert").slideUp(500);
            });
        });


    </script>



}

