@{
    ViewData["Title"] = "AddNewFTPSite";
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="row">
    <div class="form-group  col-md-4 col-md-offset-4 ">
        <form asp-action="AddNewFTPSite" id="myform1">
            <div class="panel panel-default">
                <div class="panel-heading font-weight-bold" style="text-align:center;"><strong>Add New  FTP Site</strong></div>
                <div class="panel-body">
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <strong><label class="font-weight-bold required ">Location Name*</label></strong>
                            <input name="name" id="name" type="text" value="@TempData["name"]" class="form-control" />

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <strong><label class="font-weight-bold required ">Location Code*</label></strong>
                            <input name="code" id="code" type="text" value="@TempData["code"]" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <strong><label class="font-weight-bold required ">Host Name*</label></strong>
                            <input name="host" id="host" type="text" value="@TempData["host"]" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <strong><label class="font-weight-bold required ">Username</label></strong>
                            <input name="username" id="username" type="text" class="form-control" value="@TempData["username"]" />
                        </div>
                        <div class="col-lg-6">
                            <strong><label class="font-weight-bold required ">Password</label></strong>
                            <input name="password" id="password" type="password" class="form-control" value="@TempData["password"]" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <strong><label class="font-weight-bold required ">Port Number*</label></strong>
                            <input name="port" id="port" type="text" value="@TempData["port"]" class="form-control" />
                        </div>
                        <div class="col-lg-6">
                            <strong><label class="font-weight-bold required ">Directory</label></strong>
                            <a href="#" data-toggle="tooltip" title="Don't include any '/' at the beginning or at end. "><i class="glyphicon glyphicon-info-sign"></i></i></a>
                            <input name="directory" id="directory" type="text" class="form-control" value="@TempData["directory"]" />
                        </div>
                        
                    </div>
              
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <input type="submit" value="Add Site" class="btn btn-primary" />
                            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index","Home")'">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@if (TempData["code"] != null && TempData["code"].ToString()!="")
{
    <div class="alert alert-danger" id="success-alert" style="text-align:center;position: absolute;top:0;left:0;width:100%;z-index:9999; margin:0 auto;">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <strong> @Html.ValidationMessage("CustomError")</strong>

    </div>
    <script>
        $(document).ready(function () {

            $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
                $("#success-alert").slideUp(500);
            });

        });


    </script>
}
<script>

    $(document).ready(function () {
        $("#myform1").validate({
            errorClass: "my-error-class",
            rules: {
                name: "required",
                code: "required",
                host: "required",
                port: "required"
            },
            messages: {
                name: "Required",
                code: "Required",
                host: "Required",
                port: "Required"
               
            }
        });
    });

</script>




