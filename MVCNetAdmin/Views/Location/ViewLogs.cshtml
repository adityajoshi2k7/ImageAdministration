


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="row" style="margin-bottom:23px !important;">
    <br />
    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                <caption style="text-align:center;font-size:25px;font-weight:bold">User Logs</caption>
                <thead>

                    <tr>
                        <th>User ID</th>
                        <th>IP Address</th>
                        <th>Acion</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
            </table>
        </div>
        
        <button type="button" class="btn btn-primary" style="margin-left:50%" onclick="location.href='@Url.Action("Index","Home")'">Back</button>
    </div>
</div>

    <script>


        $(document).ready(function () {
            $("#example").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/Location/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":    //disabling sorting on column 1 and 2
                    [{
                        "targets": [1,2],
                        "orderable": false
                    }],  

                "columns": [
                    { "data": "userId", "name": "userId", "autoWidth": true },
                    { "data": "ipaddress", "name": "ipaddress", "autoWidth": true },
                    { "data": "action", "name": "action", "autoWidth": true },
                    { "data": "createdAt", "name": "createdAt", "autoWidth": true },
                ]

            });
        });




    </script>
